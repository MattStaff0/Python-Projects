from turtle import*
bgcolor("black")
#green octagon
pencolor("green")
fillcolor("green")
begin_fill()
for count in range(8):
    forward(80)
    left(45)
end_fill()
    
#Blue hexagon   
pencolor("blue")
fillcolor("blue")
begin_fill()
for count in range(6):
    forward(60)
    left(60)
end_fill()
    
#purple pentagon
pencolor("purple")
fillcolor("purple")
begin_fill()
for count in range(5):
    forward(50)
    left(72.5)
end_fill()    

    
#red square
pencolor("red")
fillcolor("red")
begin_fill()
for count in range(4):
    forward(40)
    left(90)
end_fill()    
    
    
